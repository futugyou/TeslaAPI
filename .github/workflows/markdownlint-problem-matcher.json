{
    "problemMatcher": [
        {
            "owner": "markdownlint",
            "pattern": [
                {
                    "regexp": "^([^:]*):(\\d+):?(\\d+)?\\s([\\w-\\/]*)\\s(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "code": 4,
                    "message": 5
                }
            ]
        }
    ],
    "MD013": {
        "line_length": 100,
        "code_block_line_length": 180,
        "tables": false
    },
    "MD033": {
        "allowed_elements": [
            "details",
            "summary"
        ]
    }
}